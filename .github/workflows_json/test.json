{
    "name": "Test",
    "on": {
        "push": {
            "branches": [
                "dev"
            ],
            "paths-ignore": [
                ".git*",
                "**.md"
            ]
        },
        "pull_request": {
            "branches": [
                "master",
                "dev"
            ],
            "paths-ignore": [
                ".git*",
                "**.md"
            ]
        }
    },
    "jobs": {
        "test": {
            "name": "Test: ${{matrix.mcu}}",
            "runs-on": "ubuntu-latest",
            "strategy": {
                "fail-fast": true,
                "matrix": {
                    "mcu": [
                        "adafruit:samd:trinket_m0"
                    ]
                }
            },
            "steps": [{
                "name": "clone repository",
                "uses": "actions/checkout@v3"
            }, {
                "name": "compile arduino",
                "uses": "arduino/compile-sketches@v1",
                "with": {
                    "fqbn": "${{matrix.mcu}}",
                    "platforms": [{
                        "name": "arduino:samd"
                    }, {
                        "name": "adafruit:samd",
                        "source-url": "https://adafruit.github.io/arduino-board-index/package_adafruit_index.json"
                    }]
                }
            }]
        }
    }
}
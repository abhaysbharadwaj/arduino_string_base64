{
    "name": "Test",
    "on": {
        "push": {
            "branches": [
                "dev"
            ],
            "paths-ignore": [
                ".git*",
                "**.md"
            ]
        },
        "pull_request": {
            "branches": [
                "master",
                "dev"
            ],
            "paths-ignore": [
                ".git*",
                "**.md"
            ]
        }
    },
    "jobs": {
        "test": {
            "name": "Test: ${{matrix.board.name}}",
            "runs-on": "ubuntu-latest",
            "strategy": {
                "fail-fast": true,
                "matrix": {
                    "board": [{
                        "product": "arduino",
                        "arch": "samd",
                        "name": "arduino_zero_native"
                    }, {
                        "product": "adafruit",
                        "arch": "samd",
                        "name": "trinket_m0"
                    }, {
                        "product": "teensy",
                        "arch": "avr",
                        "name": "teensy41"
                    }],
                    "include": [{
                        "board": {
                            "product": "arduino",
                            "index": ""
                        }
                    }, {
                        "board": {
                            "product": "adafruit",
                            "index": "https://adafruit.github.io/arduino-board-index/package_adafruit_index.json"
                        }
                    }, {
                        "board": {
                            "product": "teensy",
                            "index": "https://www.pjrc.com/teensy/package_teensy_index.json"
                        }
                    }]
                }
            },
            "steps": [{
                "name": "clone repository",
                "uses": "actions/checkout@v3"
            }, {
                "name": "compile arduino",
                "uses": "arduino/compile-sketches@v1",
                "with": {
                    "fqbn": "${{matrix.board.product}}:${{matrix.board.arch}}:${{matrix.board.name}}",
                    "platforms": [{
                        "name": "${{matrix.board.product}}:${{matrix.board.arch}}",
                        "source-url": "${{matrix.board.index}}"
                    }]
                }
            }]
        }
    }
}